// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "capslock",
        "command": "extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    },
    {
        "key": "ctrl+o",
        "command": "workbench.action.files.openFile",
        "when": "editorTextFocus && vim.active && vim.use<C-o> && !inDebugRepl && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+o",
        "command": "-extension.vim_ctrl+o",
        "when": "editorTextFocus && vim.active && vim.use<C-o> && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+shift+c",
        "command": "-workbench.action.terminal.openNativeConsole"
    },
    {
        "key": "ctrl+alt+b",
        "command": "extension.vim_ctrl+b",
        "when": "editorTextFocus && vim.active && vim.use<C-b> && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+b",
        "command": "-extension.vim_ctrl+b",
        "when": "editorTextFocus && vim.active && vim.use<C-b> && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.files.newUntitledFile",
        "when": "editorTextFocus && vim.active && vim.use<C-n> && !inDebugRepl && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+n",
        "command": "-extension.vim_ctrl+n",
        "when": "editorTextFocus && vim.active && vim.use<C-n> && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+a",
        "command": "selectAll",
        "when": "editorTextFocus && vim.active && vim.use<C-a> && !inDebugRepl && vim.mode == 'Insert'"
    },
    // {
    //     "key": "ctrl+a",
    //     "command": "-extension.vim_ctrl+a",
    //     "when": "editorTextFocus && vim.active && vim.use<C-a> && !inDebugRepl && vim.mode != 'Insert'",
    // },
    {
        "key": "ctrl+c",
        "command": "-extension.vim_ctrl+a",
        "when": "editorTextFocus && vim.active && vim.use<C-a> && !inDebugRepl && vim.mode == 'Insert'",
    }, 
    {
        "key": "ctrl+c",
        "command": "editor.action.clipboardCopyAction",
        "when": "editorTextFocus && vim.active && vim.use<C-a> && !inDebugRepl && vim.mode == 'Insert'",
    }, 
    {
        "key": "ctrl+x",
        "command": "-extension.vim_ctrl+x",
        "when": "editorTextFocus && vim.active && vim.use<C-a> && !inDebugRepl && vim.mode == 'Insert'",
    }, 
    {
        "key": "ctrl+x",
        "command": "editor.action.clipboardCutAction",
        "when": "editorTextFocus && vim.active && vim.use<C-a> && !inDebugRepl && vim.mode == 'Insert'",
    },
    {
        "key": "alt+j",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'",
    },
    {
        "key": "alt+k",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'",
    },
    {
        "key": "alt+q",
        "command": "workbench.action.navigateEditorGroups"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.moveEditorToLeftGroup",
        "when": "vim.mode != 'Insert'"
    },  
    {
        "key": "ctrl+j",
        "command": "workbench.action.moveEditorToBelowGroup",
        "when": "vim.mode != 'Insert'"
    },  
    {
        "key": "ctrl+k",
        "command": "workbench.action.moveEditorToAboveGroup",
        "when": "vim.mode != 'Insert'"
    },  
    {
        "key": "ctrl+l",
        // "command": "workbench.action.navigateRight",
        "command": "workbench.action.moveEditorToRightGroup",
        "when": "vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+alt+q",
        "command": "workbench.action.joinTwoGroups"
    },
    // {
    //     "key": 
    //     "command": "hideSuggestWidget"
    // }
    {
        "key": "alt+j",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "alt+k",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible"
    },
] 
