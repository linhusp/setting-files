{
    // HOT
    "editor.largeFileOptimizations": true,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 80,
    "window.titleBarStyle": "native",
    // EDITOR
    "editor.autoIndent": true,
    "editor.cursorBlinking": "blink",
    "editor.cursorStyle": "line",
    // "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.fontFamily": "-roboto mono, -sf mono, -iosevka, iosevka ss04, -consolas, -monaco, menlo, meslo lg m",
    "editor.fontSize": 16.5,
    "editor.fontWeight": "500",
    "editor.glyphMargin": false,
    "editor.letterSpacing": 0.3,
    "editor.lineHeight": 23,
    "editor.lineNumbers": "relative",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.tabCompletion": "on",
    // "editor.parameterHints.enabled": false,
    "editor.parameterHints.cycle": false,
    // "editor.rulers": [80],
    // "editor.smoothScrolling": true,
    "editor.wordWrap": "bounded",
    // "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    // FILE
    "files.enableTrash": true,
    // WINDOW
    "window.menuBarVisibility": "toggle",
    // WORKBENCH
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "statusBar.foreground": "#d2d2d2",
        "statusBar.background": "#2d2d2d"
    },
    "workbench.editor.tabSizing": "fit",
    "workbench.editor.showIcons": true,
    "workbench.editor.showTabs": true,
    "workbench.settings.openDefaultSettings": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "workbench.settings.editor": "json",
    // ADD-ON
    // colorize
    "colorize.files_extensions": [
        ".json",
        ".html",
        ".js",
        ".css"
    ],
    "bracket-pair-colorizer-2.colors": [
        "#d4d4d4",
        "#46c9b0",
        "#99d4e1"
    ],
    "bracket-pair-colorizer-2.colorMode": "Independent",
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
    "bracket-pair-colorizer-2.showVerticalScopeLine": true,
    "C_Cpp.default.systemIncludePath": [
        "/usr/include/c++/7",
        "/usr/include/x86_64-linux-gnu/c++/7",
        "/usr/include/c++/7/backward",
        "/usr/lib/gcc/x86_64-linux-gnu/7/include",
        "/usr/local/include",
        "/usr/lib/gcc/x86_64-linux-gnu/7/include-fixed",
        "/usr/include/x86_64-linux-gnu",
        "/usr/include",
        "${workspaceFolder}"
    ],
    "C_Cpp.default.browse.path": [
        "/usr/include/c++/7",
        "/usr/include/x86_64-linux-gnu/c++/7",
        "/usr/include/c++/7/backward",
        "/usr/lib/gcc/x86_64-linux-gnu/7/include",
        "/usr/local/include",
        "/usr/lib/gcc/x86_64-linux-gnu/7/include-fixed",
        "/usr/include/x86_64-linux-gnu",
        "/usr/include",
        "${workspaceFolder}"
    ],
    "[html]": {
        "editor.wordWrapColumn": 120
    },
    // PYTHON
    "python.pythonPath": "python3",
    // "python.formatting.autopep8Args": [
    //     // "--in-place", "--max-line-length", "79", "--experimental",
    //     "--in-place", "--aggressive", "--aggressive"
    // ],
    "python.linting.pylintArgs": [
        "--errors-only"
    ],
    // TERMINAL
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    // FILE
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    // GIT 
    "git.ignoreMissingGitWarning": true,
    "git.autofetch": true,
    // VIM
    "vim.autoindent": true,
    "vim.useSystemClipboard": true,
    "vim.statusBarColorControl": false,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<ESC>"]
        }
    ],
    // OTHER
    "editor.minimap.showSlider": "always",
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    // "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.codeLens": false,
    // "workbench.iconTheme": "material-icon-theme",
    "window.zoomLevel": 0,
    "editor.renderLineHighlight": "all",
    "breadcrumbs.enabled": false,
    "colorize.ignore_files_extensions_deprecation": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "workbench.colorTheme": "Ghost Shell",
    "update.mode": "none"
}
