{
    // HOT
    "editor.largeFileOptimizations": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.maxColumn": 80,
    "window.titleBarStyle": "native",
    // EDITOR
    "editor.cursorBlinking": "blink",
    "editor.cursorStyle": "line",
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.fontFamily": "iosevka ss04, -consolas, -fira code, -roboto mono, -input mono, -monaco, menlo, meslo lg m",
    // "editor.fontLigatures": true,
    // "editor.fontSize": 15,
    "editor.fontSize": 16,
    // "editor.fontWeight": "500",
    // "editor.glyphMargin": false,
    // "editor.letterSpacing": -0.1,
    "editor.letterSpacing": 0.5,
    "editor.lineHeight": 22,
    // "editor.lineNumbers": "relative",
    "editor.quickSuggestions": {
        "comments": false,
    },
    "editor.renderLineHighlight": "gutter",
    "editor.rulers": [80],
    "editor.smoothScrolling": false,
    // "editor.tabCompletion": "on",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    // FILE
    "files.enableTrash": true,
    // WINDOW
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "default",
    "window.zoomLevel": 0,
    // WORKBENCH
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "statusBar.foreground": "#d2d2d2",
        "statusBar.background": "#2d2d2d",
    },
    "workbench.editor.tabSizing": "fit",
    "workbench.editor.showIcons": true,
    "workbench.editor.showTabs": true,
    "workbench.settings.openDefaultSettings": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "workbench.iconTheme": "eq-material-theme-icons-light",
    "workbench.settings.editor": "json",
    // ADD-ON
    "liveServer.settings.donotShowInfoMsg": true,
    "bracketPairColorizer.showHorizontalScopeLine": false,
    "bracketPairColorizer.consecutivePairColors": [
        ["(", ")"],
        ["[", "]"],
        ["{", "}"],
        [
            "#d4d4d4", //white
            "#9cdcfe", //sky
        ],
        "Red"
    ],
    "[cpp]": {
        "editor.quickSuggestions": true,
    },
    "C_Cpp.default.systemIncludePath": [
        "/usr/include/c++/7",
        "/usr/include/x86_64-linux-gnu/c++/7",
        "/usr/include/c++/7/backward",
        "/usr/lib/gcc/x86_64-linux-gnu/7/include",
        "/usr/local/include",
        "/usr/lib/gcc/x86_64-linux-gnu/7/include-fixed",
        "/usr/include/x86_64-linux-gnu",
        "/usr/include",
        "${workspaceFolder}"
    ],
    "C_Cpp.default.browse.path": [
        "/usr/include/c++/7",
        "/usr/include/x86_64-linux-gnu/c++/7",
        "/usr/include/c++/7/backward",
        "/usr/lib/gcc/x86_64-linux-gnu/7/include",
        "/usr/local/include",
        "/usr/lib/gcc/x86_64-linux-gnu/7/include-fixed",
        "/usr/include/x86_64-linux-gnu",
        "/usr/include",
        "${workspaceFolder}"
    ],
    // "java.errors.incompleteClasspath.severity": "ignore",
    "[javascript]": {
        "editor.tabSize": 2,
    },
    "[html]": {
        "editor.tabSize": 2,
    },
    "[css]": {
        "editor.tabSize": 2,
    },
    "[xml]": {
        "editor.tabSize": 2,
    },
    // PYTHON
    "python.pythonPath": "python3",
    "python.formatting.autopep8Args": ["--max-line-length", "80", "--experimental"],
    // "python.linting.pylintArgs": [
    //     "--errors-only",
    // ],
    // TERMINAL
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.fontFamily": " menlo, -consolas, meslo lg s for powerline",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 0,
    // FILE
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    // GIT 
    "git.ignoreMissingGitWarning": true,
    "git.autofetch": true,
    // VIM
    "vim.useSystemClipboard": false,
    "vim.statusBarColorControl": false,
    // "vim.statusBarColors.normal": "#2d2d2d",
    // "vim.statusBarColors.insert": "#BF616A",
    // "vim.statusBarColors.visual": "#B48EAD",
    // "vim.statusBarColors.visualline": "#B48EAD",
    // "vim.statusBarColors.visualblock": "#A3BE8C",
    // "vim.statusBarColors.replace": "#D08770",
    "explorer.confirmDelete": false,
    // ZEN MODE
    "zenMode.hideStatusBar": false,
    "zenMode.fullScreen": false,
    "zenMode.hideTabs": false,
    "zenMode.restore": true,
    "editor.tokenColorCustomizations": {
        "[Rouge]": {
            "keywords": {
                "fontStyle": ""
            },
            "comments": {
                "fontStyle": ""
            },
            // "variables": "#a1a2a5" 
        },
        "[1mm - Dark+]": {
            "functions": {
                // "foreground": "#FF0000",
                // "fontStyle": "bold"
            },
            "textMateRules": [
                {
                    "scope": "entity.name.function",
                    "settings": {
                        // "foreground": "#ffe9a6",
                        // "fontStyle": "bold"
                    }   
                },
                {
                    "scope": "support.function",
                    "settings": {
                        "foreground": "#f785ab",
                        // "foreground": "#ff71a9",
                        // "fontStyle": "italic"
                    }
                },
                {
                    "scope": "keyword.operator",
                    "settings": {
                        // "foreground": "#f48fb1",
                        "foreground": "#f785ab",
                    }
                },
            ]
        },
        "[Default Dark+]": {
            "keywords": "#569cd6",
            "textMateRules": [
                {
                    "scope":"punctuation.separator",
                    "settings": {
                        "foreground": "#d4d4d4",
                    }
                },
                {
                    "scope":"entity.name.function",
                    "settings": {
                        "foreground": "#c586c0",
                    }
                },
                // {
                //     "scope": "meta.function-call",
                //     "settings": {
                //         "foreground": "#c586c0",
                //     }
                // },
                {
                    "scope":"keyword.operator",
                    "settings": {
                        "foreground": "#f785ab",
                    }
                },
                {
                    "scope": "support.function",
                    "settings": {
                        "foreground": "#f785ab",
                    }
                },
            ]
        },
    },
    "colorize.ignore_search_variables_info": true,
}
